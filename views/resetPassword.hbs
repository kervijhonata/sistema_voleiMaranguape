<div class="container">

    <div class="row">
        {{>_messages}}
    </div>

    <div class="row mb-4">
        <h1>Só mais um passo:</h1>
    </div>
    <form action="/passwordrecovery/reset" method="post" class="card">
        <div class="card-body">
            <div class="text-center mb-2">
                <h3>Preencha os dados</h3>
            </div>
            <div class="mb-2">
                <label for="input-email" class="mb-1">Digite seu email:</label>
                <input type="email" name="email" class="form-control" id="input-email" required>
            </div>
            <div class="mb-2">
                <label for="input-password" class="mb-1">Crie uma nova senha:</label>
                <input type="password" name="password" class="form-control" id="input-password" required>
            </div>
            <div class="mb-2">
                <label for="input-password" class="mb-1">Repita a senha:</label>
                <input type="password" name="password" class="form-control" id="input-password-2" required>
            </div>
            <div class="mb-2">
                <label for="input-token" class="mb-1">Token de validação:</label>
                <input type="text" name="token" class="form-control" id="input-token" required>
            </div> 
            <div class="mt-4">
                <button type="submit" class="btn btn-success">Enviar</button>
            </div>
        </div>
    </form>
</div>